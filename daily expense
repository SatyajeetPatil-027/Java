package com.app.drive;
import java.util.Scanner;

public class Cost
{

	public static void main(String[] args)
	{
		Scanner sc=new Scanner(System.in);
		
		System.out.print("1) Enter the total miles driven per day: ");
		double totalMiles= sc.nextDouble();
		
		System.out.print("2) Enter the cost per gallon of gasoline: ");
		double costGallon= sc.nextDouble();
		
		System.out.print("3) Enter the average miles per gallon: ");
		double average= sc.nextDouble();
		
		System.out.print("4) Enter the parking fees per day: ");
		double fees= sc.nextDouble();
		
		System.out.print("5) Enter the tolls per day: ");
		double toll= sc.nextDouble();
		
		double totalCost= totalMiles+costGallon+average+fees+toll;
		System.out.println("\nYour daily driving cost will be: "+totalCost);
		
		sc.close();
	}

}
